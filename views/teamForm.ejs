<!DOCTYPE html>
<html>

<head>
	<title>FORM</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css"
		integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

	<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
		integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
	<link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
	<style>
		.table {
			margin: auto;
			padding: 0;
		}

		col-6 {
			padding: 0;
			margin: auto;
		}

		body {
			background-color:whitesmoke;
		}

		input.checkBox{
			transform : scale(2.5);
		}
	</style>
</head>

<body>
	<% 
		//module
		//employee
	%>
	<form class="jumbotron p-3" action="/editTeam/<%= module._id %> %>?_method=PUT" method="POST">
		<div class="row">
			<div class="col-6">
				<b><p style="text-align: center;">AVAILABLE</p></b>
				<br>
				<table class="table table-light table-hover">
					<thead>
						<tr>
							<th>NAME</th>
							<th>CREDIT</th>
							<th>EXP</th>

						</tr>
					</thead>
					<tbody>
						<% employee.forEach((emp)=>{ %>
							<% if(emp.available){ %>
								<tr>
									<td><%= emp.name %></td>
									<td><%= emp.credits %></td>
									<td><%= emp.expYears %></td>
									<th><input class="checkBox" type="checkbox" name="addNew" value="<%= emp.username %>"></th>
								</tr>
							<% } %>
						<% }); %>
						
					</tbody>
				</table>
			</div>
			<div class="col-6">
				<b><p style="text-align: center;">CURRENT</p></b>
				<br>
				<table class="table table-light table-hover">
					<thead>
						<tr>
							<th>NAME</th>
							<th>CREDIT</th>
							<th>EXP</th>
						</tr>
					</thead>
					<tbody>
						<% employee.forEach((emp)=>{ %>
							<% if(emp.currentModule.id == module._id){ %>
								<tr>
									<td><%= emp.name %></td>
									<td><%= emp.credits %></td>
									<td><%= emp.expYears %></td>
									<th><input class="checkBox" type="checkbox" name="alreadyAdded" value="<%= emp.username %>" checked>
									</th>
								</tr>
							<% } %>
						<% }); %>
					</tbody>
				</table>

			</div>
		</div>
		<div class="text-center mt-4 mb-1">
			<button type="submit" class="btn btn-md btn-outline-success">
				SAVE
			</button>
		</div>
	</form>

</body>

</html>