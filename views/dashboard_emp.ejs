    </div>
  </nav>

	<div class="card">
		<!-- card header -->
		<div class="card-header">
			<ul class="list-group list-group-horizontal-lg" style="list-style:none;">
  				<li id="group" class="list-group-item list-group-horizontal flex-fill col-md-4">
					<i class="far fa-user-circle"></i>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
					<strong><%= employee.name %></strong>
				</li>
  				<li id="group"class="list-group-item list-group-horizontal flex-fill col-md-4">
					<i class="far fa-envelope"></i>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
					<strong><%= employee.email %></strong>
				</li>
  				<li id="group-button" class="column col-md-4 text-center">
					<button class="btn btn-warning col-md-8" data-toggle="modal" data-target="#editDetailsModalCenter">
						<em>Edit Profile</em>
						<i class="fas fa-edit" style="margin-left:0.8em;"></i>
					</button>
				</li>
			</ul>
			
		</div>

		<!-- CREDITS CARD -->
		<div class="row">
			<div class="column col-md-8">
				<div id="card1" class="card">  
					<h1><strong>CREDITS : <%= employee.credits %></strong></h1>
					<hr>
					<!-- MODULE CARD -->
					<% if(module!=null){ %>
						<div class="column col-md-12" style="padding: 0; padding-top: 0">
  							<div id="card2" class="card">
  								<ul class="list-group list-group-flush">
									<li id="module" class="list-group-item"><h4><a href="/modules/<%= module._id %>"><strong><%= module.moduleName.toUpperCase() %></strong></a></h4></li>
    								<li id="module-list" class="list-group-item"><em><i id="icon" class="fas fa-tasks"></i>Status : <%= module.status %></em></li>
    								<li id="module-list" class="list-group-item"><em><i id="icon" class="far fa-clock"></i>Due : <%= module.dueDate.toLocaleDateString('en-US') %></em></li>
								</ul>
  							</div>
  						</div>
					<% }else{ %>
						<div>
							<div class="column col-md-12" style="padding: 0; padding-top: 0">
								<div id="card2" class="card">
									<ul class="list-group list-group-flush">
										<li id="module" class="list-group-item"><h4>NO MODULE</h4></li>
									</ul>
								</div>
  							</div>	
						</div>
					<% } %>
				</div>
			</div>

			<!-- SKILLS CARD -->
			<div class="column col-md-4" style="padding: 0; margin-left: 0">
				<div id="card3" class="card">
					<ul class="list-group list-group-flush">
    					<li id="skills" class="list-group-item">
							SKILLS
						</li>
						<% employee.skills.forEach((skill)=>{ %>
							<li id="skill-list" class="list-group-item">
								<i class="fas fa-pencil-alt" style="margin-right:0.5em;"></i>
								<%= skill.toUpperCase() %></li>
						<% }); %>	
  					</ul>
  				</div>
  			</div>
  		</div>	
	</div>

<!-- edit Details Modal -->
<div class="modal fade" id="editDetailsModalCenter" tabindex="-1" role="dialog" aria-labelledby="editDetailsModalCenterTitle" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered" role="document"> 
		<div class="modal-content">
			<div class="modal-body">
				<!-- FORM STARTS -->
				<form action="/employee_edit/<%= employee._id %>?_method=PUT" method="POST">
					<div class="row">
						<div class="col-6">
							<!-- NAME -->
							<div class="form-group">
								<label for="name">
									<strong>NAME</strong>
								</label>
								<input type="text" class="form-control" id="name" name="name" value="<%= employee.name %>" required>
							</div>
							<!-- EMAIL -->
							<div class="form-group" required>
								<label for="email">
									<strong>EMAIL</strong>
								</label>
								<input type="email" class="form-control" id="email" name="email" value="<%= employee.email %>" required>
							</div>
						</div>
						<!-- SKILLS TEXTAREA -->
						<div class="col-6">
							<div class="form-group">
								<label for="skillTextarea" class="col-form-label">
									<strong>SKILLS</strong>
								</label>
								<textarea class="form-control" rows="4" cols="40" id="skillTextarea" name="skills" placeholder="Write all your skills here (separed by comma)"><%= employee.skills.join(",") %></textarea>
								<!-- adjust rows and cols to change the size of text-area -->
							</div>
						</div>
					</div>
					<hr>
					<!-- SUBMIT BUTTON -->
					<div class="text-center">
						<button type="submit" class="btn btn-outline-info" style="text-align: center;">SAVE</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
	
</body>
</html>